{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "node16",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node16",
    "lib": [
      "ES2023",
      "DOM"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}